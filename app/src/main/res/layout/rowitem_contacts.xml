<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_contact_profile"
        android:layout_alignParentLeft="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_toRightOf="@+id/iv_contact_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_contact_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_contact_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_contact_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_contact_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout></RelativeLayout>